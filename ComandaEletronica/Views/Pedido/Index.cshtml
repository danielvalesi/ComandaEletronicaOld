
@{
    ViewBag.Title = "Pedidos - Lista";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="container">

    <!-- Basic Setup -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
            
            PEDIDOS
            
            <a href="/pedido/create" class="btn btn-success">CADASTRAR</a>
            
            </h3>
            
            <div class="panel-options">
                <a href="#" data-toggle="panel">
                    <span class="collapse-icon">&ndash;</span>
                    <span class="expand-icon">+</span>
                </a>
                <a href="#" data-toggle="remove">
                    &times;
                </a>
            </div>
        </div>
        <div class="panel-body">
            
            <script type="text/javascript">
            jQuery(document).ready(function($)
            {
                $("#example-1").dataTable({
                    aLengthMenu: [
                        [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
                    ]
                });
            });
            </script>
            
            <table id="example-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Conta Id</th>
                        <th>Status</th>
                        <th>Data de Entrega</th>

                        <th>Ações</th>
                    </tr>
                </thead>
            

            
                <tbody>
                    @foreach (var pedido in Model) 
                    {
                    <tr>
                        <td>@pedido.Id</td>
                        <td>@pedido.ContaId</td>
                        <td>@pedido.Status</td>
                        <td>@pedido.DataEntrega</td>
                        <td>
                            <a href="/pedido/update/@pedido.Id" class="btn btn-xs btn-default">
                                <span class="glyphicon glyphicon-edit"></span> Editar
                            </a>
                            <a href="/pedido/delete/@pedido.Id" class="btn btn-xs btn-danger">
                                <span class="glyphicon glyphicon-trash"></span> Apagar
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>

    <div class="row">
        <div class="col m6">
            <h2>Pedidos</h2>
        </div>
        <div class="col m6">
            <br>
            <br>
            <a href="/pedido/create" class="btn right light-blue darken-3">Cadastrar pedido</a>
        </div>
    </div>
    
    <div class="row">
        <form action="/pedido/filter" method="post" class="col m12">
            <nav>
                <div class="nav-wrapper">
                 
                        <div class="input-field">
                            <input id="search" name="nome" type="search" placeholder="Pesquisar pelo nome..." required>
                            <label for="search"><i class="material-icons">search</i></label>
                            <i class="material-icons">close</i>
                        </div>
                  
                </div>
            </nav>
        </form>
    </div>
    
    



    
    
            
            
    




</div>

